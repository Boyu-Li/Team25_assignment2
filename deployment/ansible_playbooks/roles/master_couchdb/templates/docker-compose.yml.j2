version: "3"
services:
  couch_{{hostname}}:
    image: "couchdb:2.3.0"
    restart: always
    network_mode: host
    ports:
      - "5984:5984"
      - "5986:5986"
      - "4369:4369"
      - "9100-9200:9100-9200"
    volumes:
      - /home/couchdb/{{hostname}}/data:/opt/couchdb/data
    environment:
      - COUCHDB_USER=user
      - COUCHDB_PASSWORD=pass
      - NODENAME={{ansible_host}}
    container_name: couch_{{hostname}}

